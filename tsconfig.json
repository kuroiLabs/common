{
	"compilerOptions": {
		"outDir": "dist",
		"experimentalDecorators": true,
		"allowJs": true,
		"target": "ESNext",
		"module": "umd",
    "lib": [
      "ESNext",
      "dom"
    ],
		"declaration": true,
		"declarationMap": true,
		"strict": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
		"suppressImplicitAnyIndexErrors": true,
		"importHelpers": true,
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		]
	},
	"include": [
		"./**/*.ts",
		"package.json"
	],
  "exclude": [
    "dist/*",
    "node_modules"
  ]
}